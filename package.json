{
  "name": "node-red-contrib-typescript",
  "version": "1.0.0",
  "description": "Fast TypeScript node with type checking for Node-RED",
  "main": "dist/typescript-node.js",
  "keywords": [
    "node-red",
    "exec",
    "bash",
    "script",
    "typescript",
    "utilities",
    "tools",
    "turbo"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/benoitadam/node-red-contrib-typescript.git"
  },
  "homepage": "https://github.com/benoitadam/node-red-contrib-typescript",
  "bugs": {
    "url": "https://github.com/benoitadam/node-red-contrib-typescript/issues"
  },
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0"
  },
  "dependencies": {
    "typescript": "^5.7.2",
    "node-fetch": "^3.3.2"
  },
  "scripts": {
    "build": "node esbuild.config.js",
    "dev": "npm-run-all --parallel lint:watch build:watch",
    "lint": "tsc --noEmit",
    "lint:watch": "tsc --noEmit --watch",
    "build:watch": "node esbuild.config.js --watch",
    "clean": "rm -rf dist"
  },
  "node-red": {
    "version": ">=2.0.0",
    "examples": "examples",
    "nodes": {
      "typescript-node": "dist/typescript-node.js"
    }
  },
  "devDependencies": {
    "@types/node": "^24.3.0",
    "@types/node-red": "^1.3.5",
    "esbuild": "^0.25.9",
    "npm-run-all": "^4.1.5"
  }
}
